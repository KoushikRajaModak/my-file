
@{
    ViewBag.Title = "Graphs";
}

<head>
    <script src="~/ofline/hichart.js"></script>
    <script src="~/ofline/code_highcharts_com_modules_data.js"></script>
    <script src="~/ofline/_com_modules_drilldown.js"></script>
    <script src="~/ofline/https_code_highcharts_com_modules_variable-pie.js"></script>
    <script src="~/ofline/https-code-highcharts-com-modules-exporting.js"></script>
    <script src="~/ofline/https-code-highcharts-com-modules-export-data.js"></script>
    <script src="~/ofline/https-code-highcharts-com-modules-accessibility.js"></script>
  

    <script src="~/Scripts/Graphs/Current.js"></script>


    <style type="text/css">

        #container {
            height: 400px;
        }

        /*.highcharts-figure,
        .highcharts-data-table table {
            min-width: 700px;
            max-width: 1200px;
            margin: 1em auto;
        }*/

        .highcharts-data-table table {
            font-family: Verdana, sans-serif;
            border-collapse: collapse;
            border: 1px solid #ebebeb;
            margin: 10px auto;
            text-align: center;
            width: 100%;
            max-width: 500px;
        }

        .highcharts-data-table caption {
            padding: 1em 0;
            font-size: 1.2em;
            color: #555;
        }

        .highcharts-data-table th {
            font-weight: 600;
            padding: 0.5em;
        }

        .highcharts-data-table td,
        .highcharts-data-table th,
        .highcharts-data-table caption {
            padding: 0.5em;
        }

        .highcharts-data-table thead tr,
        .highcharts-data-table tr:nth-child(even) {
            background: #f8f8f8;
        }

        .highcharts-data-table tr:hover {
            background: #f1f7ff;
        }



        .xcointainer {
            height: 91%;
            width: 86%;
            position: fixed;
            z-index: 1;
            top: 70px;
            left: 13%;
            border-radius: 10px;
        }

        .xtopcontainer {
            /*  display: flex;*/
            /*border: 2px rebeccapurple solid;*/
            height: 50%;
        }

        .xtopsub1 {
            display: flex;
            /*border: 2px rebeccapurple solid;*/
            height: 30%;
            width: 100%;
        }

        .xtopsub2 {
            /* display: flex;*/
            /*border: 2px rebeccapurple solid;*/
            height: 70%;
            width: 100%;
        }

        .gbtn1 {
            text-decoration: none;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 16px;
            color: white;
            /*background-color: #881378;*/
            background-image: linear-gradient(to top, #4c6c8f, #a493ed);
            width: 12%;
            /*height: 100%;*/
            margin-left: 1%;
            border: none;
            border-radius: 7px;
            text-align: inherit;
            position: relative;
        }

        .gbtn2 {
            text-decoration: none;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 16px;
            color: white;
            /*background-color: #1a4b47;*/
            background-image: linear-gradient(to top, #969696, #5cb4cb);
            width: 12%;
            /*height: 100%;*/
            margin-left: 1%;
            border: none;
            border-radius: 7px;
            text-align: inherit;
            position: relative;
        }

        .tagcointainer {
            display: flex;
            margin: 2%;
        }

        .tag {
            text-decoration: none;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 16px;
            font-weight: bolder;
            margin: 0 0 0 2%;
            width: 90%;
        }

        .ovensel {
            text-decoration: none;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 14px;
            font-weight: bold;
            width: 60%;
        }

        .yearsel {
            text-decoration: none;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 14px;
            font-weight: bold;
            margin: 1%;
            width: 62%;
        }

        .datesel {
            text-decoration: none;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 14px;
            font-weight: bold;
            margin: 2%;
            width: 58%;
        }

        .datesel1 {
            text-decoration: none;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 14px;
            font-weight: bold;
            margin: 2% 2% 2% 13%;
            width: 58%;
        }

        .gibtn {
            width: 62%;
            margin-left: 27%;
            margin-bottom: 2%;
        }

        label {
            margin-left: 5%;
        }
    </style>

</head>



<body>
    <div class="xcointainer">
        <div class="xtopcontainer">
            <div class="xtopsub1">



                @*Avg. Coke Temp.*@
                <div class="gbtn2">
                    <div class="tagcointainer">
                        <p class="tag">Avg. Coke Temp.</p>
                        <i class="fa-solid fa-chart-column" aria-hidden="true"></i>
                    </div>
                    <label for="SelectDate_Avg_coke_Temp">Date</label>
                    <input type="date" class="datesel" id="SelectDate_Avg_coke_Temp" />
                    <input type="button" value="Load" class="gibtn" id="Avg_coke_Temp" onclick="Avg_coke_Temp()" />
                </div>

                @*Pushings_Per_Week*@
                <div class="gbtn2">

                    <div class="tagcointainer">
                        <p class="tag">Pushings Per Week</p>
                        <i class="fa-solid fa-chart-column" aria-hidden="true"></i>
                    </div>
                    <label for="Select_From_Date_Pushings_Per_Week">Date</label>
                    <input type="date" class="datesel" id="Select_From_Date_Pushings_Per_Week" />
                    <input type="button" value="Load" class="gibtn" id="Calorific_Value" onclick="Pushings_Per_Week()" />

                </div>

                @*Pussing Per Year*@
                <div class="gbtn2">
                    <div class="tagcointainer">
                        <p class="tag">Pushings Per Year</p>
                        <i class="fa-solid fa-chart-column" aria-hidden="true"></i>
                    </div>
                    @{

                        int Year_1st = Convert.ToInt32(DateTime.Now.AddYears(-7).Year);
                        int Year_2st = Convert.ToInt32(DateTime.Now.AddYears(-6).Year);
                        int Year_3st = Convert.ToInt32(DateTime.Now.AddYears(-5).Year);
                        int Year_4st = Convert.ToInt32(DateTime.Now.AddYears(-4).Year);
                        int Year_5st = Convert.ToInt32(DateTime.Now.AddYears(-3).Year);
                        int Year_6st = Convert.ToInt32(DateTime.Now.AddYears(-2).Year);
                        int Year_7st = Convert.ToInt32(DateTime.Now.AddYears(-1).Year);
                        int Year_8st = Convert.ToInt32(DateTime.Now.Year);

                    }
                    <label for="Select_From_Date_Pushings_Per_Year">Year</label>
                    <select class="yearsel" id="Select_From_Date_Pushings_Per_Year">
                        <option value="@Year_1st">@Year_1st</option>
                        <option value="@Year_2st">@Year_2st</option>
                        <option value="@Year_3st">@Year_3st</option>
                        <option value="@Year_4st">@Year_4st</option>
                        <option value="@Year_5st">@Year_5st</option>
                        <option value="@Year_6st">@Year_6st</option>
                        <option value="@Year_7st">@Year_7st</option>
                        <option value="@Year_8st" selected>@Year_8st</option>

                    </select>

                    <input type="button" value="Load" style=" margin: 10px 0px 0px 45px;" class="gibtn" id="Calorific_Value" onclick="Pushing_Per_Year()" />
                </div>
                @*Control Flue Temp.Daily *@

                <div class="gbtn2">
                    <div class="tagcointainer">
                        <p class="tag">Control Flue Temp</p>
                        <i class="fa-solid fa-chart-column" aria-hidden="true"></i>
                    </div>
                    <label for="Select_From_Control_Flow_Bar">Date</label>
                    <input type="date" class="datesel" id="Select_From_Control_Flow_Bar" />

                    <input type="button" value="Load" class="gibtn" id="Control_Flue_Temp" onclick="Control_Flue_Temp_Bar()" />
                </div>

                @*Moisturiser and amount  *@
                <div class="gbtn2">
                    <div class="tagcointainer">
                        <p class="tag">Moisturizers & Amount</p>
                        <i class="fa-solid fa-chart-column" aria-hidden="true"></i>
                    </div>
                    <label for="Select_Date_MA">Date</label>
                    <input type="date" class="datesel" id="Select_Date_MA" />

                    <input type="button" value="Load" class="gibtn" id="Control_Flue_Temp" onclick="Mosisturiser_Amount()" />
                </div>
            </div>
            
       

            @*Graph*@
            <div class="xtopsub2">
                <figure class="highcharts-figure">
                    <div id="container"></div>
                </figure>
            </div>
           
        </div>



    </div>



</body>
